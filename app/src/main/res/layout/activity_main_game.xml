<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.chathumina.brainiac.MainGame">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/round_button_margin"
                    android:background="@drawable/guess_background"
                    android:text="Guess   : "
                    android:textColor="@color/white"
                    android:textSize="@dimen/guess_fontSize" />

                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/round_button_margin"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/del_button_textSize" />

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/round_button_margin"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/del_button_textSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/round_button_margin"
                    android:background="@drawable/timer_brackgound"
                    android:text="Timer: 0s"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/guess_fontSize" />

                <TextView
                    android:id="@+id/messageTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/round_button_margin"
                    android:textSize="@dimen/guess_fontSize" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="1"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="2"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="3"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <TextView
                    android:id="@+id/wins"
                    android:layout_width="@dimen/round_button_width"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:background="@drawable/wins_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Wins:0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/del_button_textSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="4"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="5"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="6"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <TextView
                    android:id="@+id/loses"
                    android:layout_width="@dimen/round_button_width"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:background="@drawable/loses_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Loses:0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/del_button_textSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="7"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="8"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="9"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <TextView
                    android:id="@+id/hints"
                    android:layout_width="@dimen/round_button_width"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/save_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Score"
                    android:textColor="@color/white"
                    android:textSize="@dimen/del_button_textSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:text="DEL"
                    android:textColor="@color/white"
                    android:textSize="@dimen/del_button_textSize" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="0"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/hashtag"
                    android:layout_width="@dimen/round_button_height"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/number_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="#"
                    android:text="#"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="@dimen/round_button_width"
                    android:layout_height="@dimen/round_button_height"
                    android:layout_margin="@dimen/round_button_margin"
                    android:foreground="@drawable/button_background"
                    android:background="@drawable/minus_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:tag="-"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/round_button_textSize" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/dark_gray" />


</LinearLayout>
